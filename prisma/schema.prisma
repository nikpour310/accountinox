generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  ADMIN
  EDITOR
  SUPPORT
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  DELIVERED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

model User {
  id        String    @id @default(cuid())
  email     String?   @unique
  phone     String?   @unique
  name      String?
  role      Role      @default(CUSTOMER)
  password  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  orders    Order[]
  posts     Post[]
  sessions  Session[]
  accounts  Account[]
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PhoneVerification {
  id        String   @id @default(cuid())
  phone     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SiteSetting {
  id              String   @id @default(cuid())
  siteTitle       String   @default("Accountinox")
  siteDescription String?
  tailwindMode    String   @default("local") // 'cdn' | 'local'
  otpEnabled      Boolean  @default(false)
  otpMode         String   @default("two-step")
  paymentSettings Json?
  headerHtml      String?
  footerHtml      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  posts    Post[]
  products Product[]
}

model Tag {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  posts    Post[]
  products Product[]
}

model Product {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String?
  price       Int
  stock       Int         @default(0)
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  tags        Tag[]
  orderItems  OrderItem[]
  inventories Inventory[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Inventory {
  id                  String   @id @default(cuid())
  productId           String
  encryptedCredential String
  nonce               String
  delivered           Boolean  @default(false)
  createdAt           DateTime @default(now())
  product             Product  @relation(fields: [productId], references: [id])
}

model Coupon {
  id        String    @id @default(cuid())
  code      String    @unique
  discount  Int // percent or fixed depending on type
  isPercent Boolean   @default(true)
  active    Boolean   @default(true)
  expiresAt DateTime?
}

model Order {
  id        String      @id @default(cuid())
  userId    String
  status    OrderStatus @default(PENDING)
  total     Int
  couponId  String?
  items     OrderItem[]
  payments  Payment[]
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  price     Int
  quantity  Int
  delivered Boolean @default(false)
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model Payment {
  id         String        @id @default(cuid())
  orderId    String
  provider   String
  providerId String
  amount     Int
  status     PaymentStatus @default(PENDING)
  meta       Json?
  createdAt  DateTime      @default(now())
  order      Order         @relation(fields: [orderId], references: [id])
}

model Post {
  id         String    @id @default(cuid())
  title      String
  slug       String    @unique
  coverImage String?
  content    String
  summary    String?
  published  Boolean   @default(false)
  keywords   String[]
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
  tags       Tag[]
  faqs       PostFAQ[]
  authorId   String?
  author     User?     @relation(fields: [authorId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model PostFAQ {
  id       String @id @default(cuid())
  postId   String
  question String
  answer   String
  post     Post   @relation(fields: [postId], references: [id])
}

model GlobalFAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
}

model ChatConversation {
  id        String        @id @default(cuid())
  userId    String?
  subject   String?
  messages  ChatMessage[]
  updatedAt DateTime      @updatedAt
  createdAt DateTime      @default(now())
}

model ChatMessage {
  id             String           @id @default(cuid())
  conversationId String
  senderId       String?
  senderRole     Role?
  content        String
  isRead         Boolean          @default(false)
  createdAt      DateTime         @default(now())
  conversation   ChatConversation @relation(fields: [conversationId], references: [id])
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  actorId   String?
  meta      Json?
  createdAt DateTime @default(now())
}
